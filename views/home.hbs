<div class = "log">

	Date: {{todayCat.date}}
	<br><br>
	Calorie Goal: {{todayCat.calGoal}} &nbsp; &nbsp; 
	Monetary Goal: ${{todayCat.monGoal}}
	<br>
	Current Calories: {{todayCat.curCal}} &nbsp; &nbsp;
	Current $ Spent: ${{todayCat.curMon}} <br><br>

	<button class = "homeBtns" onclick="location.href = '/add'"> Add Food Entry </button>
	<button class = "homeBtns" onclick="location.href = '/lookup'"> Search Catalogs </button> <br><br> 

	{{#if newFood}}
		<table style="width:96%" id = "myTable">
	{{else}}
		<table style="width:96%">
	{{/if}}
		<tr>
			<th>Name</th>
			<th>Time (0-23)</th> 
			<th>Price ($)</th>
			<th>Calories</th>
		</tr>
	{{#each foods}}
		<tr>
			<td>{{this.name}}</td>
			<td>{{this.time}}</td>
			<td>{{this.price}}</td>
			<td>{{this.cals}}</td>
		</tr>
	{{/each}}

	</table>

	<br>
	<form method="POST" action="/home">
		<input id = "newDay" type="submit" value = "Start New Day">
	</form>

	</div>